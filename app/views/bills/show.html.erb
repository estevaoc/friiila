<%= content_for :title, "Friiila" %>

   <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 bill" style='background: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%), url(<%= @place.photo %>)'>
      <div class="card-description">
        <h3><%= @bill.place.place_name %></h3>
      </div>
      <div class="total">
      <p>Total</p>
      </div>
      <div class="orders">
         <table>
          <tbody>
           <% @orders.each do |order| %>
          <tr>
          <td> <%= order.amount %> </td>
          <td>  <%= order.item.product %> </td>
          <td><%= order.item.price*order.amount %></td>
        </tr>
        <% end %>


          </tbody>
        </table>
      </div>
      <div>
        <input type="submit" class="btn btn-success btn-lg" value="Pagar">
      </div>
    </div>
  </div>

