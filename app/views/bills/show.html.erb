<%= content_for :title, "Friiila - A vida sem fila" %>

   <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 bill" >
      <div class="bg" style='background: url(<%= @place.photo %>) center center;'></div>
      <div class="card-description">
        <h3><%= @bill.place.place_name %></h3>
      </div>
      <div class="total">
        <table>
          <tbody>
              <tr>
                <td>Total.............</td>
                <% total = 0 %>
                <% @orders.each do |order| %>
                  <% total += order.item.price*order.amount%>
                <% end %>
                <td><%= total %></td>
              </tr>
          </tbody>
        </table>
      </div>
      <div class="orders">
        <table>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.amount %></td>
                <td><%= order.item.product %></td>
                <td><%= order.item.price*order.amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div style="text-align: center;">
        <%= link_to('Pagar', place_bill_path(@place, @bill), method: :patch, data: { confirm: 'Conta paga! Voce esta friiila!!!' }, class: "btn btn-success btn-lg") %>
      </div>
    </div>
  </div>



