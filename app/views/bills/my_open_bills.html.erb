<h1>Contas abertas no <%= @place.place_name %></h1>

<% @bills.each do |bill| %>
  <div class="col-md-2 col-sm-3 col-xs-6 cardpanda">
    <div class="frontpanda">
      <%= image_tag bill.user.photo, class: "contactpanda"%>
      <span class="namepanda"><%= bill.user.user_name %></span>
      <hr>
      <div class="jobpanda">
        <table>
          <tbody>
              <tr>
                <td>Total: </td>
                <% total = 0 %>
                <% bill.orders.each do |order| %>
                  <% total += order.item.price*order.amount%>
                <% end %>
                <td><%= total %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="backpanda">
      <%= link_to "Novo pedido", new_bill_order_path(bill), class: "novopididu" %>
      <div class="orders">
        <table>
          <tbody>
            <% bill.orders.each do |order| %>
              <tr>
                <td><%= order.amount %></td>
                <td><%= order.item.product %></td>
                <td><%= order.item.price*order.amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to "Fechar conta", my_open_bills_place_bills_path(@place), class: "novopididu" %>
      <%= link_to my_open_bills_place_bills_path(@place), method: :delete do %>
        <input class="novopididu" value="Fechar conta">
      <%end%>
    </div>
  </div>
<% end %>

<%= link_to "Voltar", my_places_places_path, class: "btn btn-success btn-lg" %>
