<div id="bannerCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#bannerCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#bannerCarousel" data-slide-to="1"></li>
    <li data-target="#bannerCarousel" data-slide-to="2"></li>
    <li data-target="#bannerCarousel" data-slide-to="3"></li>
    <li data-target="#bannerCarousel" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item active">
      <img src="<%= asset_path "banner1.jpg" %>" alt="Seja Friiila">
      <div class="carousel-caption banner-caption">
        <h1 class="carousel-title">Seja Friiila</h1>
        <h3 class="carousel-text">E viva só a parte boa da balada!</h3>
        <%= link_to "Quero!", new_user_registration_path, class: "buttonverde", id: "banner-button" %>
      </div>
    </div>

    <div class="item">
      <img src="<%= asset_path "banner2.jpg" %>" alt="Não pare">
      <div class="carousel-caption">
        <h1 class="carousel-title">Aproveite mais</h1>
        <h3 class="carousel-text">Cada minuto de todas as happy hours!</h3>
        <%= link_to "Quero!", new_user_registration_path, class: "buttonverde"%>
      </div>
    </div>

    <div class="item">
      <img src="<%= asset_path "banner3.jpg" %>" alt="Não esquente">
      <div class="carousel-caption">
        <h1 class="carousel-title">Bem vindo Friiila</h1>
        <h3 class="carousel-text">Tchau parcial, adeus maquininha!</h3>
        <%= link_to "Quero!", new_user_registration_path, class: "buttonverde", id: "banner-button" %>
    </div>

    <div class="item">
      <img src="<%= asset_path "banner4.jpg" %>" alt="Compartilhe essa liberdade">
      <div class="carousel-caption">
        <h1 class="carousel-title">Compartilhe essa liberdade</h1>
        <h3 class="carousel-text">Acompanhe seu consumo na palma da sua mão!</h3>
        <%= link_to "Quero!", new_user_registration_path, class: "buttonverde", id: "banner-button" %>
      </div>
    </div>

    <div class="item">
      <img src="<%= asset_path "banner5.jpg" %>" alt="Não pare">
      <div class="carousel-caption">
        <h1 class="carousel-title">Autonomia</h1>
        <h3 class="carousel-text">Não espere para ser livre!</h3>
        <%= link_to "Quero!", new_user_registration_path, class: "buttonverde", id: "banner-button" %>
      </div>
    </div>

  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#bannerCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Anterior</span>
  </a>
  <a class="right carousel-control" href="#bannerCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Próximo</span>
  </a>
</div>

